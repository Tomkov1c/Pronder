<Page
    x:Class="Pronder.Views.NewProjectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    Padding="24, 16"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Margin="0, 0, 0, 16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="&#xE8AC;"
                      Margin="0, 0, 16, 0"
                      FontSize="17"
                      Grid.Column="0"/>
                <StackPanel Orientation="Vertical"
                        Margin="8, 0, 0, 0"
                        Grid.Column="1">
                    <TextBlock Text="Name"
                           Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="Name you new or already existing project."
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                </StackPanel>
                <TextBox x:ConnectionId='7' PlaceholderText="Name"
                     Width="250"
                     HorizontalAlignment="Right"
                     Grid.Column="2"
                     x:Name="ProjectNameTextbox"/>
            </Grid>
            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
              Padding="24, 16"
              CornerRadius="{StaticResource ControlCornerRadius}"
              Margin="0, 0, 0, 16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="&#xEB41;"
                              Margin="0, 0, 16, 0"
                              FontSize="17"
                              Grid.Column="0"/>
                <StackPanel Orientation="Vertical"
                                Margin="8, 0, 0, 0"
                                Grid.Column="1">
                    <TextBlock Text="Tag"
                                   Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="What category does your project fall under (ex. Graphic Design, Fullstack Application, ...)"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                </StackPanel>
                <TextBox x:ConnectionId='6' PlaceholderText="Tag"
                     Width="250"
                     HorizontalAlignment="Right"
                     Grid.Column="2"
                     x:Name="ProjectTagTextbox"/>
            </Grid>
            <StackPanel Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
              Padding="24, 16"
              CornerRadius="{StaticResource ControlCornerRadius}"
              Margin="0, 0, 0, 16">
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE8E4;"
                          Margin="0, 0, 16, 0"
                          FontSize="17"
                          Grid.Column="0"/>
                    <StackPanel Orientation="Vertical"
                            Margin="8, 0, 0, 0"
                            Grid.Column="1"
                            VerticalAlignment="Center">
                        <TextBlock Text="Description"
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <TextBlock Text="Describe your project."
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                <TextBox x:ConnectionId='5' PlaceholderText="Description"
                     Width="auto"
                     Margin="0, 24, 0 ,0"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     HorizontalAlignment="Stretch"
                     Grid.Column="2"
                     x:Name="ProjectAboutTextbox"/>
            </StackPanel>
            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
              Padding="24, 16"
              CornerRadius="{StaticResource ControlCornerRadius}"
              Margin="0, 0, 0, 16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="&#xE8B9;"
                      Margin="0, 0, 16, 0"
                      FontSize="17"
                      Grid.Column="0"/>
                <StackPanel Orientation="Vertical"
                        Margin="8, 0, 0, 0"
                        Grid.Column="1">
                    <TextBlock Text="Icon"
                       Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="Give your project an icon so it can be easaly spoted from the side bar."
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                </StackPanel>
                <Button x:ConnectionId='4' HorizontalAlignment="Right"
                    Margin="0, 0, 10, 0"
                    Padding="8"
                    Grid.Column="2"
                    x:Name="ProjectIconPathButton">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xEC50;" FontSize="15"/>
                            <TextBlock Text="Pick a file"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Margin="8, 0, 0, 0"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
              Padding="24, 16"
              CornerRadius="{StaticResource ControlCornerRadius}"
              Margin="0, 0, 0, 16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <FontIcon Glyph="&#xE7FB;"
                      Margin="0, 0, 16, 0"
                      FontSize="17"
                      Grid.Column="0"/>
                <StackPanel Orientation="Vertical"
                        Margin="8, 0, 0, 0"
                        Grid.Column="1">
                    <TextBlock Text="Banner"
                           Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="Give your project a banner."
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                </StackPanel>
                <Button x:ConnectionId='3' HorizontalAlignment="Right"
                    Margin="0, 0, 10, 0"
                    Padding="8"
                    Grid.Column="2"
                    x:Name="ProjectBannerPathButton">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="&#xEC50;" FontSize="15"/>
                            <TextBlock Text="Pick a file"
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   Margin="8, 0, 0, 0"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
            <Button x:ConnectionId='2' HorizontalAlignment="Stretch"
                Style="{StaticResource AccentButtonStyle}"
                Margin="0, 16"
                Padding="8, 8"
                                        >
                <StackPanel Orientation="Horizontal">
                    <FontIcon Glyph="&#xE710;" FontSize="15"/>
                    <TextBlock Text="Create"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Margin="8, 0, 0, 0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </ScrollViewer>
</Page>

