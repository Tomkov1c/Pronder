<Page
    x:Class="Pronder.Views.ProjectAboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <Border Width="auto"
					Padding="32"
					Background="{ThemeResource ControlFillColorDefaultBrush}"
					CornerRadius="{StaticResource ControlCornerRadius}">
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="About" Style="{StaticResource TitleTextBlockStyle}" Margin="0, 0, 0, 19"/>
                        <TextBlock x:Name="DescriptionContnet" Margin="0, 5, 0, 0" TextWrapping="Wrap" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
